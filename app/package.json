{
  "name": "crosshare-next",
  "version": "0.1",
  "description": "Crosshare ported to next.js",
  "author": "Mike D",
  "private": true,
  "type": "module",
  "browserslist": [
    ">0.2%",
    "last 2 versions",
    "unreleased versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "supportedBrowsers": "echo \"export const browserRegex = $(browserslist-useragent-regexp --allowHigherVersions);\" > lib/supportedBrowsers.ts",
    "lint": "npx next lint",
    "clean": "rimraf nextjs/",
    "dev": "GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json next dev",
    "analyze": "ANALYZE=true NO_SENTRY=true next build",
    "build": "NO_SENTRY=true next build",
    "start": "next start",
    "extract": "NODE_ENV=development npx lingui extract",
    "sync": "NODE_ENV=development npx lingui extract && npx lingui compile",
    "compileI18n": "npx lingui compile",
    "predeploy": "tsc && yarn clean && next build",
    "prodDeploy": "npx firebase deploy --only hosting:prod",
    "stagingDeploy": "npx firebase deploy --only hosting:staging",
    "test": "NODE_OPTIONS='--experimental-vm-modules' NEXT_PUBLIC_USE_FIREBASE_EMULATOR=1 FIRESTORE_EMULATOR_HOST=localhost:8080 npx firebase emulators:exec --only firestore 'jest --watch'",
    "ci": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=1 FIRESTORE_EMULATOR_HOST=localhost:8080 npx firebase emulators:exec --project=mdcrosshare --only firestore 'jest --ci --runInBand --forceExit'"
  },
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/react": "^11.8.1",
    "@juggle/resize-observer": "^3.3.1",
    "@lingui/react": "^3.13.2",
    "@popperjs/core": "^2.11.2",
    "@sentry/node": "^6.18.1",
    "@use-it/event-listener": "^0.1.7",
    "canvas": "^2.9.0",
    "color2k": "^2.0.0",
    "date-fns": "^2.28.0",
    "fast-deep-equal": "^3.1.3",
    "feed": "^4.2.2",
    "firebase": "^9.6.7",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.1",
    "fp-ts": "^2.11.8",
    "hast-util-to-html": "^8.0.3",
    "hast-util-truncate": "^1.0.1",
    "idb-keyval": "6.1.0",
    "io-ts": "^2.2.16",
    "jspdf": "^2.5.1",
    "levelup": "^5.1.1",
    "lodash": "^4.17.21",
    "make-plural": "^7.0.0",
    "mdast-util-find-and-replace": "^2.1.0",
    "next": "^12.1.0",
    "react": "^17.0.2",
    "react-csv": "^2.2.2",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "5.0.3",
    "react-fluid-table": "^0.4.2",
    "react-icons": "^4.3.1",
    "react-image-crop": "^10.0.0-beta.1",
    "react-popper": "^2.2.5",
    "react-window": "^1.8.6",
    "rehype-external-links": "^1.0.1",
    "rehype-react": "^7.0.4",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "rocksdb": "^5.2.0",
    "simple-markdown": "^0.7.3",
    "twemoji-parser": "^13.1.0",
    "unified": "^10.1.1",
    "unist-util-is": "^5.1.1",
    "use-resize-observer": "^8.0.0"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.7.0",
    "@emotion/jest": "^11.8.0",
    "@firebase/rules-unit-testing": "^2.0.2",
    "@lingui/cli": "^3.13.2",
    "@lingui/macro": "^3.13.2",
    "@modern-dev/jsbn": "^1.2.5",
    "@next/bundle-analyzer": "^12.1.0",
    "@sentry/webpack-plugin": "^1.18.8",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@types/hast": "^2.3.4",
    "@types/jest": "^27.4.1",
    "@types/jest-in-case": "^1.0.5",
    "@types/levelup": "^5.1.0",
    "@types/lodash": "^4.14.179",
    "@types/react": "^17.0.39",
    "@types/react-csv": "^1.1.2",
    "@types/react-dom": "^17.0.13",
    "@types/react-window": "^1.8.5",
    "@types/rimraf": "^3.0.2",
    "@types/rocksdb": "^3.0.1",
    "@types/twemoji-parser": "^13.1.1",
    "@types/unist": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "babel-plugin-macros": "^3.1.0",
    "browserslist-useragent-regexp": "^3.0.2",
    "csv": "^6.0.5",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "firebase-functions-test": "^0.3.1",
    "firebase-tools": "^10.2.2",
    "jest": "^27.5.1",
    "jest-in-case": "^1.0.2",
    "leaked-handles": "^5.2.0",
    "mdast-util-from-markdown": "^1.2.0",
    "mdast-util-to-hast": "^12.1.1",
    "mockdate": "^3.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2",
    "unist-util-remove-position": "^4.0.1",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^firebase-admin/(.*)$": "<rootDir>/node_modules/firebase-admin/lib/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "setupFilesAfterEnv": [
      "<rootDir>/setupTestsAfterEnv.ts"
    ]
  }
}
